<%- include("partials/header") %>
	<div class="container">
		<div class="jumbotron mt-2">
  			<h1 class="display-4"><%= title %></h1>
  			<p class="lead">
				A collection of Derek's paintings. 
			</p>
  			<hr class="my-4">
  			<p class="lead">
				<a class="btn btn-primary btn-lg" href="/catagories" role="button">Back to all art</a>
				<a class="btn btn-primary btn-lg float-right" href="/painting/new" role="button">Add new painting</a>

  			</p>
		</div>
		
		
		<div class="container">
			<div class="row text-center align-items-center">
			<% paintings.forEach( function(paint){ %>
				<div class="col-md-4 col-sm-6">
					<a href="/painting/<%= paint.id %>">
					<div class="img-thumbnail">
						<img src="/<%= paint.image %>" class="img-thumbnail"/>
						<div class="caption">
							<h4 class="text-dark">
							<%= paint.title %>
							</h4>
						</div>
					</div>
					</a>
				</div>
			<% }) %>
			</div>
		
		</div>
		
		
		
	</div>




<%- include("partials/footer") %>
